pipeline {
    agent any

    parameters {
        string(name: 'USERNAME', defaultValue: 'Shiva', description: 'User name')
        choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Environment')
        booleanParam(name: 'RUN_LS', defaultValue: true, description: 'Run ls command')
    }

    stages {
        stage('Test_Local') {
            steps {
                echo "Hello ${params.USERNAME}"
                echo "Environment: ${params.ENV}"

                script {
                    if (params.RUN_LS) {
                        sh 'ls -lrt'
                    }
                }
            }
        }

        stage('Test_Staging') {
            steps {
                echo "Hello World 2 - ${params.ENV}"
            }
        }

        stage('Test_Prod') {
            steps {
                echo "Production Testing"
            }
        }
    }
}
